---
// src/layouts/Layout.astro
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';

export interface Props {
	title: string;
  currentPage: 'a√±adir' | 'lista' | 'deudores' | 'reportes';
}

const { title, currentPage } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Sistema de Pedidos Chicharron" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50">
		<div class="flex md:grid md:grid-cols-[260px_1fr] min-h-screen">
			
			<div class="print:hidden">
				<Navbar currentPage={currentPage} />
			</div>

			<main class="flex-1 p-4 sm:p-6 lg:p-8 overflow-y-auto w-full pt-20 md:pt-0">
				<slot />
			</main>
		</div>
	</body>
</html>