---
// src/components/FormularioPedido.astro
---
<div class="max-w-xl mx-auto">
  <form id="form-pedido" class="bg-white shadow-lg rounded-2xl p-8 mb-4 border border-slate-200">
    <h2 class="text-3xl font-bold text-gray-800 mb-6 text-center">
      üê∑ A√±adir Nuevo Pedido
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="nombre_cliente" class="block text-gray-700 text-sm font-semibold mb-2">Nombre del Cliente</label>
        <input type="text" id="nombre_cliente" name="nombre_cliente" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="Ej: Juan P√©rez" required />
      </div>
      <div>
        <label for="responsable" class="block text-gray-700 text-sm font-semibold mb-2">Responsable</label>
        <input type="text" id="responsable" name="responsable" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="Ej: Anthony" required />
      </div>
    </div>

    <div class="mb-8">
      <label for="monto" class="block text-gray-700 text-sm font-semibold mb-2">Monto de la Venta (S/.)</label>
      <input type="number" id="monto" name="monto" step="0.10" min="0" class="shadow-sm appearance-none border border-gray-300 rounded-lg w-full py-3 px-4 text-gray-700 focus:outline-none focus:ring-2 focus:ring-yellow-500" placeholder="Ej: 15.50" required />
    </div>

    <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-4 rounded-lg focus:outline-none focus:shadow-outline transform hover:scale-105 transition duration-300">
      Guardar Pedido
    </button>
  </form>
</div>

<script>
  import { supabase } from '../lib/supabase';

  document.getElementById('form-pedido')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const formData = new FormData(form);
    
    const nombreCliente = formData.get('nombre_cliente');
    const responsable = formData.get('responsable');
    const monto = formData.get('monto');

    const button = form.querySelector('button[type="submit"]');
    button.disabled = true;
    button.textContent = 'Guardando...';

    const { error } = await supabase
      .from('pedidos')
      .insert({ 
        nombre_cliente: nombreCliente, 
        responsable: responsable,
        monto: parseFloat(monto) // Convertimos el monto a n√∫mero
      });

    if (error) {
      alert('Error al guardar: ' + error.message);
    } else {
      form.reset();
      window.dispatchEvent(new Event('pedidoAgregado'));
    }
    button.disabled = false;
    button.textContent = 'Guardar Pedido';
  });
</script>